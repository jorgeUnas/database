## Check the tables content

SELECT * FROM trips;

SELECT * FROM riders;

SELECT * FROM cars;


## Do a simple cross join between riders and cars

SELECT riders.first,
   riders.last,
   cars.model
FROM riders, cars;

## Left join the trips and riders tables

SELECT *
FROM trips
LEFT JOIN riders
  ON trips.rider_id = riders.id;
  
  
## Match the cars with the trips that they have done

SELECT *
FROM trips
JOIN cars
  ON trips.car_id = cars.id;
  
## Stack the new riders on table riders2 with the existing riders from original table

SELECT *
FROM riders
UNION
SELECT *
FROM riders2;

## What is the average cost of a ride? 

SELECT AVG(cost)
FROM trips;

## Which riders have use the platform less than 500 times?

SELECT *
FROM riders
WHERE total_trips < 500
UNION
SELECT *
FROM riders2
WHERE total_trips < 500;

## WHat are the two cars models with the most trips completed?

SELECT model, trips_completed
FROM cars
ORDER BY 2 DESC
LIMIT 2;