## Check the tables content

SELECT * FROM trips;

SELECT * FROM riders;

SELECT * FROM cars;


## Do a simple cross join between riders and cars

SELECT riders.first,
   riders.last,
   cars.model
FROM riders, cars;

## Left join the trips and riders tables

SELECT *
FROM trips
LEFT JOIN riders
  ON trips.rider_id = riders.id;
  
  
## Match the cars with the trips that they have done

SELECT *
FROM trips
JOIN cars
  ON trips.car_id = cars.id;
  
## Stack the new riders on table riders2 with the existing riders from original table

SELECT *
FROM riders
UNION
SELECT *
FROM riders2;